# This is the .htaccess file for netlify.
/*
    X-Content-Type-Options: nosniff                                     # Prevent browser sniffing
    Content-Security-Policy: frame-ancestors 'none'
    X-Frame-Options: DENY                                               # Prevents the use of iframe
    x-XSS-Protection: 1; mode=block                                     # Prevents XSS-Attacks
    Strict-Transport-Security: max-age=17280000                         # Prevents MITM Attacks
    Referrer-Policy: same-origin                                        # Prevents back tracking
    Feature-Policy: camera 'none' ; microphone 'none' ; payment 'none'; # Deactivates usage of Camera, Mic usw.
    Content-Security-Policy: default-src https:                         #
